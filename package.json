{
	"name": "nodejs-typescript-starter",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "nodemon",
		"build": "tsc",
		"start": "rimraf dist && tsc && node dist/index.js",
		"lint": "eslint . --fix --max-warnings=0",
		"format": "prettier . --write"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.ts": [
			"npm run lint",
			"npm run format"
		],
		"*.tsx": [
			"npm run lint",
			"npm run format"
		]
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^20.11.20",
		"@typescript-eslint/eslint-plugin": "^7.0.2",
		"@typescript-eslint/parser": "^7.0.2",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"husky": "^9.0.11",
		"nodemon": "^3.1.0",
		"prettier": "^3.2.5",
		"rimraf": "^5.0.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"dotenv": "^16.4.5",
		"express": "^4.18.2"
	}
}
